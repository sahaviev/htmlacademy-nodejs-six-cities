{
  "name": "six-cities",
  "version": "6.0.0",
  "description": "Проект «Six Cities» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server src/mocks/mock-server-data.json --port 3123",
    "mongodb:start": "docker compose --file \"./docker-compose.yml\" --env-file \"./.env\" --project-name \"six-cities\" up -d",
    "mongodb:stop": "docker compose --file \"./docker-compose.yml\" down"
  },
  "dependencies": {
    "class-transformer": "0.5.1",
    "chalk": "^5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "^1.11.10",
    "express": "4.18.2",
    "express-async-handler": "1.2.0",
    "dotenv": "16.4.1",
    "got": "^14.0.0",
    "http-status-codes": "2.3.0",
    "mongoose": "7.5.3",
    "inversify": "6.0.2",
    "pino": "8.17.2",
    "reflect-metadata": "0.2.1",
    "rimraf": "5.0.1",
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@typegoose/typegoose": "11.5.0",
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/express": "4.17.18",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "nodemon": "3.0.1",
    "json-server": "1.0.0-alpha.21",
    "pino-pretty": "10.3.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  }
}
