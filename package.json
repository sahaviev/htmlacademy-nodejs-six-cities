    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "^2.6.2",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "rimraf": "5.0.1",
    "chalk": "^5.3.0",
    "dayjs": "^1.11.10",
